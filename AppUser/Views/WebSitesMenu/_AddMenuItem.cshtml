
@{
    // @Model represents a set of parameters in a string separated by a ":"
    // 1st parameter is itemId
    // 2nd parameter is record id
    // 3rd parameter is add location (above/below)

    var parameterValues = @Model;
    var itemId = parameterValues.Substring(0, parameterValues.IndexOf(":"));
    parameterValues = parameterValues.Substring(parameterValues.IndexOf(":") + 1);
    var currId = parameterValues.Substring(0, parameterValues.IndexOf(":"));
    var addLocation = parameterValues.Substring(parameterValues.IndexOf(":") + 1);
    var inputId = itemId + "Input";

    var actionCode = "AddNew";
    if (addLocation == "AddFirst")
    {
        actionCode = "AddFirst";
    }
}

<form asp-action="@actionCode"
      asp-controller="WebSitesMenu"
      asp-route-profileId="@ViewData["ProfileId"]"
      asp-route-currId="@currId"
      asp-route-addLocation="@addLocation"
      style="display: none;" id=@itemId>
    <div class="has-feedback has-clear">
        <input class="input-sm form-control" autofocus id="@inputId"
               type="text" name="inputDescription" maxlength="30"
               placeholder="Enter Item Description!" />
        <i class="form-control-clear glyphicon glyphicon-remove-sign form-control-feedback"></i>
    </div>

    <div class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-xs btn-success">
                Add New&nbsp;<i class="fa fa-plus"></i>
            </button>
        </div>

        <div class="btn-group" role="group">
            <button type="button" class="btn btn-xs btn-info"
                    onclick="fctCancelBelow('@itemId')">
                Cancel&nbsp;<i class="fas fa-times-circle"></i>
            </button>
        </div>
    </div>

</form>
