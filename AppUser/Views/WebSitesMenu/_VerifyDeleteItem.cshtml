
@{
    // @Model represents a set of parameters in a string separated by a ":"
    // 1st parameter is DeleteItem Id
    // 2nd parameter is btnDescriptionId
    // 3nd parameter is record id of current WebSitesMenu item

    var parameterValues = @Model;
    var deleteItem = parameterValues.Substring(0, parameterValues.IndexOf(":"));
    parameterValues = parameterValues.Substring(parameterValues.IndexOf(":") + 1);
    var currId = parameterValues.Substring(0, parameterValues.IndexOf(":"));
    var btnDescriptionId = parameterValues.Substring(parameterValues.IndexOf(":") + 1);
}

<form asp-action="Delete"
      asp-controller="WebSitesMenu"
      asp-route-currId="@currId"
      asp-route-profileId="@ViewData["ProfileId"]"
      style="display: none;" id=@deleteItem>

    <div class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-xs btn-danger">
                Delete&nbsp;<i class="fas fa-trash-alt"></i>
            </button>
        </div>

        <div class="btn-group" role="group">
            <button type="button" class="btn btn-xs btn-info"
                    onclick="fctCancelBelow('@deleteItem', '@btnDescriptionId')">
                Cancel&nbsp;<i class="fas fa-times-circle"></i>
            </button>
        </div>
    </div>

</form>
