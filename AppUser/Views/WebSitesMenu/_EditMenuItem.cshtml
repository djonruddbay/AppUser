

@{
    // @Model represents a set of parameters in a string separated by a ":"
    // 1st parameter is EditItem Id
    // 2nd parameter is btnDescriptionId 
    // 3nd parameter is record id of current WebSitesMenu item
    // 4nd parameter is new item description

    var parameterValues = @Model;
    var editItem = parameterValues.Substring(0, parameterValues.IndexOf(":"));
    parameterValues = parameterValues.Substring(parameterValues.IndexOf(":") + 1);
    var currId = parameterValues.Substring(0, parameterValues.IndexOf(":"));
    var editDescription = parameterValues.Substring(parameterValues.IndexOf(":") + 1);

    var inputId = editItem + "Input";
}

<form asp-action="EditItem"
      asp-controller="WebSitesMenu"
      asp-route-currId="@currId"
      asp-route-profileId="@ViewData["ProfileId"]"
      style="display: none;" id=@editItem>

    <input type="text" name="inputDescription" class="input-sm form-control"
           maxlength="30" autofocus id="@inputId"
           value="@editDescription" />

    <div class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-xs btn-success">
                Update&nbsp;<i class="fas fa-save"></i>
            </button>
        </div>

        <div class="btn-group" role="group">
            <button type="button" class="btn btn-xs btn-info"
                    onclick="fctCancelBelow('@editItem')">
                Cancel&nbsp;<i class="fas fa-times-circle"></i>
            </button>
        </div>
    </div>

</form>
