@using AppUser.Models.UserAccountViewModels
@using AppUser.Data

@model SignInViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Sign-In";
}

<h2 style="text-decoration:underline">@ViewData["Title"]</h2>

<div class="row container">
    <form method="post">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 UserWindow" >

            <label asp-for="UserName" class="RowTop" style="font-size:large; margin-bottom:3px"></label>
            <div class="form-group has-feedback has-clear">
                <input asp-for="UserName" type="text" autofocus
                       class="form-control input-sm UserInput"
                       spellcheck="false" autocomplete="off" />
                <i class="form-control-clear glyphicon glyphicon-remove-sign form-control-feedback"></i>
            </div>

            <label asp-for="Password" style="font-size:large; margin-bottom:3px"></label>
            <div class="form-group has-feedback Password">
                <input asp-for="Password" type="password" id="Password"
                       class="form-control input-sm UserInput"
                       spellcheck="false" autocomplete="off" />
                <i class="form-control-clear glyphicon glyphicon-eye-open form-control-feedback"></i>
            </div>

            <hr />

            <div class="form-group RowBottom">
                <div asp-validation-summary="All" class="text-danger"></div>

                <button type="submit" class="btn btn-sm btn-success">
                    Sign Me In&nbsp;<span class="fa fa-sign-in-alt"></span>
                </button>
                <span class="pull-right RememberMeCheckBox">
                    <input asp-for="RememberMe"
                           style="margin-left:5px;  margin-top:12px; transform:scale(1.3);" />
                    <label asp-for="RememberMe">Remember Me</label>
                </span>
            </div>

            <hr />

            <div class="form-group RowBottom">
                <a href="#" data-toggle="modal" data-target="#theTandC" id="aRegisterTandC"
                   class="input-sm">
                    <u><i>Terms and Conditions</i></u>
                </a>
                <a asp-controller="UserAccount" asp-action="PasswordRecovery" class="input-sm">
                    <u><i>Forgot My Password</i></u>
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/Password.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}